<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata" fqn="ActivityScorecard">
    <apiVersion>48.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Activity Scorecard Component</masterLabel>
    <description>Configurable homepage component.</description>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__HomePage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__AppPage,lightning__HomePage">
            <property name="Title" type="String" label="Title" default="Activity Scorecard - Last 30 Days"/>
            <property name="kpiTitle1" type="String" label="KPI Title 1" default="Deals Won"/>
            <property name="kpiValue1" type="String" label="KPI Value 1" default="10"/>
            <property name="kpiSign1" type="Boolean" label="KPI 1 Positive?" default="true"/>
            <property name="kpiTitle2" type="String" label="KPI Title 2" default="Deals Lost"/>
            <property name="kpiValue2" type="String" label="KPI Value 2" default="7"/>
            <property name="kpiSign2" type="Boolean" label="KPI 2 Positive?" default="false"/>
            <property name="activityIcon1" type="String" label="Activity 1 Icon" default="standard:task"/>
            <property name="activitiesCompleted1" type="Integer" label="# of Activities Completed 1" default="90"/>
            <property name="activitiesDescription1" type="String" label="Activity 1 Description" default="tasks completed"/>
            <property name="personalBest1" type="Integer" label="Personal Best 1" default="78"/>            
            <property name="activityIcon2" type="String" label="Activity 2 Icon" default="standard:log_a_call"/>
            <property name="activitiesCompleted2" type="Integer" label="# of Activities Completed 2" default="98"/>
            <property name="activitiesDescription2" type="String" label="Activity 2 Description" default="calls logged"/>
            <property name="personalBest2" type="Integer" label="Personal Best 2" default="120"/>            
            <property name="activityIcon3" type="String" label="Activity 3 Icon" default="standard:email"/>
            <property name="activitiesCompleted3" type="Integer" label="# of Activities Completed 3" default="135"/>
            <property name="activitiesDescription3" type="String" label="Activity 3 Description" default="emails sent"/>
            <property name="personalBest3" type="Integer" label="Personal Best 3" default="150"/>            
            <property name="activityIcon4" type="String" label="Activity 4 Icon" default="standard:event"/>
            <property name="activitiesCompleted4" type="Integer" label="# of Activities Completed 4" default="23"/>
            <property name="activitiesDescription4" type="String" label="Activity 4 Description" default="events logged"/>
            <property name="personalBest4" type="Integer" label="Personal Best 4" default="35"/>            
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>